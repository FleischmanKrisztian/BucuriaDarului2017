@model Finalaplication.Models.Beneficiary

@{
    ViewBag.Title = "Delete";
}
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
<h1>
    @Localizer["Delete"]
</h1>

<h3>
    @Localizer["DeleteMessage"]
</h3>
<div>
    <h4>
        @Localizer["Beneficiary"]
    </h4>
    <hr />
    <h3>
        @Localizer["PersonalInformation"]:
    </h3>
    <dl class="row">
        <dt class="col-sm-2">
            @Localizer["Fullname"]:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Fullname)
        </dd>
       
        <dt class="col-sm-2">
            @Localizer["Gender"]:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PersonalInfo.Gender)
        </dd>
        <dt class="col-sm-2">
            @Localizer["Birthdate"]:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PersonalInfo.Birthdate)
        </dd>
       
        <dt class="col-sm-2">
            @Localizer["CNP"]:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CNP)
        </dd>
        <dt class="col-sm-2">
            @Localizer["Phonenumber"]:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PersonalInfo.PhoneNumber)
        </dd>
    </dl>
   
    <dl class="row">
        <dt class="col-sm-2">
            @Localizer["AddressInformation"]:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Adress)
        </dd>
    </dl>

    <div class="form-actions no-color">
        <span>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <span>
                    @using (Html.BeginForm("Edit", "Beneficiary/", FormMethod.Get))
                    {
                        <div class="form-group">
                            @Localizer["Makethisbeneficiaryinactive"]
                            @Html.CheckBox("Inactive", checked(true))
                            <br>
                            <input type="submit" class="btn btn-primary" value=@Localizer["Apply"] />
                        </div>
                    }
                </span>
                <a href=@Url.Action( "Index" ) class="btn btn-primary">@Localizer["BackToList"]</a>
            </div>
            }
        </span>
    </div>
</div>
