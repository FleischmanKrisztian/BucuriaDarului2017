@model IEnumerable<Finalaplication.Models.Volunteer>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@using Microsoft.AspNetCore.Builder
@using Microsoft.AspNetCore.Localization
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Options
@inject IOptions<RequestLocalizationOptions> LocalizationOptions
@{
    ViewBag.Title = Localizer["Volunteers"];
}


<head>
    <style>

        .pagination a {
            color: black;
            float: left;
            padding: 8px 16px;
            text-decoration: none;
        }

            .pagination a:active {
                background-color: #4CAF50;
                color: white;
            }

            .pagination a.active {
                background-color: #4CAF50;
                color: white;
            }

                .pagination a.active:current {
                    background-color: #4CAF50;
                    color: white;
                }

            .pagination a:hover:not(.active) {
                background-color: #ddd;
            }

        .ten {
            width: 10%;
        }
        .twentyfive {
            width: 25%;
        }

        .td {
            width: 30%;
        }

    </style>
</head>
<div>
    @{
        var requestCulture = Context.Features.Get<IRequestCultureFeature>();
        var cultureItems = LocalizationOptions.Value.SupportedUICultures
            .Select(c => new SelectListItem { Value = c.Name, Text = Localizer.GetString(c.Name) })
            .ToList();

    }
</div>
<h2>@Localizer["Volunteers"]</h2>

<p>
    <a href=@Url.Action( "Create")>@Localizer["CreateNew"]</a>
</p>

@using (Html.BeginForm("Index", "Volunteer/", FormMethod.Get))
{
    <div class="container">
        <div class="row align-items-center">
            <div class="col-3">
                @Localizer["Name"]:
            </div>
            <div class="col-1">
                @Localizer["Active"]?
            </div>
            <div class="col-1">
                @Localizer["HasCar"]
            </div>
            <div class="col-3">
                @Localizer["BornAfter"]:
            </div>
            <div class="col-3">
                @Localizer["BornBefore"]:
            </div>
        </div>
        <div class="row align-items-center">
            <div class="col-3">
                @Html.TextBox("searching")
            </div>
            <div class="col-1">
                @Html.CheckBox("Active")
            </div>
                <div class="col-1">
                    @Html.CheckBox("HasCar")
                </div>
                <div class="col-3">
                    <input type="date" name="lowerdate">
                </div>
                <div class="col-3">
                    <input type="date" name="upperdate">
                </div>

            </div>
        <div class="row align-items-center">
            <div class="col-md-auto">
                <br />
                <input type="submit" value=@Localizer["Search"] class="btn-primary">
            </div>
        </div>
    </div>
    <p>
        <div class="pagination">
            @{
                int x = 1;
                for (int i = 0; i < ViewBag.counter; i++)
                {
                    if (i == 0 || i % ViewBag.nrofdocs == 0)
                    {
                        @Html.ActionLink(x.ToString(), "Index", new { page = x, sortOrder = ViewBag.SortOrder, searching = ViewBag.searching, HasCar = ViewBag.hascar, Active = ViewBag.active, lowerdate = ViewBag.Lowerdate, upperdate = ViewBag.Upperdate })
                        x++;
                    }
                }
            }
        </div>
    </p>
}

<table class="table">
    <tr>
        <th>
            <a href=@Url.Action( "Index", new { sortOrder = ViewBag.NameSortParm, searching = ViewBag.searching, HasCar = ViewBag.hascar, Active = ViewBag.active, lowerdate = ViewBag.Lowerdate, upperdate = ViewBag.Upperdate })>@Localizer["Firstname"]</a>
        </th>
        <th>
            <a href=@Url.Action( "Index" , new { sortOrder=ViewBag.LastnameSort, searching=ViewBag.searching, HasCar=ViewBag.hascar, Active=ViewBag.active, lowerdate=ViewBag.Lowerdate, upperdate=ViewBag.Upperdate })>@Localizer["Lastname"]</a>
        </th>
        <th>
            <a href=@Url.Action( "Index", new { sortOrder = ViewBag.DateSortParm, searching = ViewBag.searching, HasCar = ViewBag.hascar, Active = ViewBag.active, lowerdate = ViewBag.Lowerdate, upperdate = ViewBag.Upperdate })>@Localizer["BirthDate"]</a>
        </th>
        <th>
            <a href=@Url.Action( "Index", new { sortOrder = ViewBag.Activesort, searching = ViewBag.searching, HasCar = ViewBag.hascar, Active = ViewBag.active, lowerdate = ViewBag.Lowerdate, upperdate = ViewBag.Upperdate })>@Localizer["Active"]</a>
        </th>
        <th>
            @Localizer["Phonenumber"]
        </th>
        <th>
            <a href=@Url.Action( "Index", new { sortOrder = ViewBag.Gendersort, searching = ViewBag.searching, HasCar = ViewBag.hascar, Active = ViewBag.active, lowerdate = ViewBag.Lowerdate, upperdate = ViewBag.Upperdate })>@Localizer["Gender"]</a>
        </th>
        <th>
            <a href=@Url.Action( "Index", new { sortOrder = ViewBag.HourCountSort, searching = ViewBag.searching, HasCar = ViewBag.hascar, Active = ViewBag.active, lowerdate = ViewBag.Lowerdate, upperdate = ViewBag.Upperdate })>@Localizer["HourCount"]</a>
        </th>
        <th></th>
    </tr>

    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="3 " style="color:red">
                @Localizer["Error"]
            </td>
        </tr>
    }
    else
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Firstname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Lastname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Birthdate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.InActivity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ContactInformation.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gender)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HourCount)
                </td>
                <td>
                    <a href=@Url.Action( "Edit", new { id = item.VolunteerID })>@Localizer["Edit"]</a> |
                    <a href=@Url.Action( "Details", new { id = item.VolunteerID })>@Localizer["Details"]</a> |
                    <a href=@Url.Action( "Delete", new { id = item.VolunteerID })>@Localizer["Delete"]</a> |
                    <a href=@Url.Action( "Contracts", new { id = item.VolunteerID })>@Localizer["Contracts"]</a>
                    @*@using (Html.BeginForm("Index", "Volcontract/", FormMethod.Get, new { id = item.VolunteerID }))*@

                </td>
            </tr>
        }
    }
</table>
