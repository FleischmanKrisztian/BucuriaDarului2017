@model IEnumerable<Finalaplication.Models.Volunteer>
@{
    ViewBag.Title = "Birthday";
}
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
<h2>@Localizer["Birthdays"]</h2>

<table class="table">
    <tr>
        <th>
            @Localizer["Firstname"]
        </th>
        <th>
            @Localizer["Lastname"]
        </th>
        <th>
            @Localizer["Birthdate"]
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        var Day = Finalaplication.Models.Volunteer.Nowdate();
        var voldays = Finalaplication.Models.Volunteer.Volbd(item);
        if ((Day <= voldays && Day + 10 > voldays) || (Day > 354 && 365 - (Day + 365 - Day - 2) >= voldays))
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Firstname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Lastname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Birthdate)
                </td>
                <td>
                    <a href=@Url.Action( "Details", new { id = item.VolunteerID })>@Localizer["Details"]</a>
                </td>
            </tr>
        }
    }

</table>