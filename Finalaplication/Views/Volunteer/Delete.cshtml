@model Finalaplication.Models.Volunteer

@{
    ViewBag.Title = "Delete";
}
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<h2>@Localizer["Delete"]</h2>
<head>
    <style>
        /*body {
                background-color: gainsboro;
            }*/

        .emp-profile {
            padding: 3%;
            margin-top: 3%;
            margin-bottom: 3%;
            border-radius: 0.5rem;
            background: #fff;
        }

        h5 {
            color: #333;
        }

        h6 {
            color: #0062cc;
        }

        label {
            font-weight: 600;
            font-size: 15px;
        }
    </style>
</head>
<hr />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="emp-profile">
        <div class="row">
            <div class="col-md-9">
                <div class="row">
                    <div class="col-md-6">
                        <label>@Localizer["Firstname"]:</label>
                    </div>

                    <div class="col-md-6">
                        @Html.DisplayFor(model => model.Firstname)
                        <hr />
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <label> @Localizer["Lastname"]:</label>
                    </div>
                    <div class="col-md-6">
                        @Html.DisplayFor(model => model.Lastname)
                        <hr />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <label>@Localizer["Birthdate"]:</label>
                    </div>

                    <div class="col-md-6">
                        @Html.DisplayFor(model => model.Birthdate)
                        <hr />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <label>@Localizer["CNP"]:</label>
                    </div>

                    <div class="col-md-6">
                        @Html.DisplayFor(model => model.CNP)
                        <hr />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <label> @Localizer["Active"]:</label>
                    </div>
                    <div class="col-md-6">
                        @Html.DisplayFor(model => model.InActivity)
                        <hr />
                    </div>
                </div>

            </div>


            <div class="col-md-3">
                <span>

                    @using (Html.BeginForm("Edit", "Volunteer/", FormMethod.Get))
                    {
                        <div class="form-group">
                            @Localizer["MakeItInactive"]
                            @Html.CheckBox("Inactive", checked(true))
                            @Html.HiddenFor(model => model.Activedates)
                            <br>
                            <input type="submit" class="btn btn-primary" value=@Localizer["Apply"] />
                        </div>
                    }
                </span>
                <a href=@Url.Action( "Index" ) class="btn btn-primary">@Localizer["BackToList"]</a>

            </div>

        </div>
    </div>
}