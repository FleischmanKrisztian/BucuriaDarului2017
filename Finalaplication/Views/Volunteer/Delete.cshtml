@model Finalaplication.Models.Volunteer

@{
    ViewBag.Title = "Delete";
}
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<h2>@Localizer["Delete"]</h2>


<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Localizer["Firstname"]:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Firstname)
        </dd>

        <dt>
            @Localizer["Lastname"]:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Lastname)
        </dd>

        <dt>
            @Localizer["Birthdate"]:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Birthdate)
        </dd>

        <dt>
            @Localizer["Active"]:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.InActivity)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

<div class="form-actions no-color">
    <span>

        @using (Html.BeginForm("Edit", "Volunteer/", FormMethod.Get))
        {
            <div class="form-group">
                @Localizer["Error"]
                @Html.CheckBox("Inactive", checked(true))
                <br>
                <input type="submit" class="btn btn-primary" value=@Localizer["Apply"] />
            </div>
        }

    </span>
    <style>
        .button {
            background-color: dodgerblue;
            border: none;
            color: white;
            padding: 10px 28px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 14px;
            margin: 4px 2px;
            cursor: pointer;
        }

        .button1 {
            border-radius: 12%;
        }
    </style>
    <a href=@Url.Action( "Index" ) class="button button1">@Localizer["BackToList"]</a>
</div>
    }
</div>