@model Finalaplication.Models.Volcontract
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = "Delete";
    string idofvol = Model.OwnerID;
}
<h3>
    @Localizer["Volcontract"]
</h3>
<hr />
<head>
    <style>
        /*body {
                background-color: darkgray;
            }*/
        .emp-profile {
            padding-top: 1%;
            padding-left: 3%;
            padding-right: 3%;
            padding-bottom: 1%;
            margin-top: 3%;
            margin-bottom: 3%;
            border-radius: 0.5rem;
            background: #fff;
        }

        .profile-head h5 {
            color: #333;
        }

        .profile-head h6 {
            color: #0062cc;
        }

        .proile-rating {
            font-size: 15px;
            color: #818182;
            margin-top: 5%;
        }

        .emp-profile label {
            font-size: 18px;
            color: black;
            font-weight: 600;
        }

        .emp-profile img {
            padding-right: 2px;
            width: 45px;
            height: 35px;
        }
    </style>
</head>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="emp-profile">
        <div class="row">
            <div class="col-md-9">
                <div class="row">
                    <div class="col-sm-6">
                        <label> @Localizer["NumberOfRegistration"]:</label>
                    </div>
                    <div class="col-sm-6">
                        @Html.DisplayFor(model => model.NumberOfRegistration)
                        <hr />
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        <label> @Localizer["RegistrationDate"]:</label>
                    </div>
                    <div class="col-sm-6">
                        @Html.DisplayFor(model => model.RegistrationDate)
                        <hr />
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        <label>@Localizer["ExpirationDate"]:</label>
                    </div>
                    <div class="col-sm-6">
                        @Html.DisplayFor(model => model.ExpirationDate)
                        <hr />
                    </div>
                </div>
            </div>
            <div class="form-actions no-color col-md-3">
                <input type="hidden" name="idofvol" value="@idofvol" />
                <input type="submit" value=@Localizer["Delete"] class="btn btn-primary" /> |
                <a href=@Url.Action( "Index", new { idofvol = idofvol } ) class="profile-edit-btn" name="btnAddMore">@Localizer["BackToList"]</a>
            </div>
        </div>
    </div>

}

