@model IEnumerable<Finalaplication.Models.Volcontract>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = "ContractExp";
}

<h1>@Localizer["ContractExpirations"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Localizer["OwnerID"]
            </th>
            <th>
                @Localizer["NumberOfRegistration"]
            </th>
            <th>
                @Localizer["RegistrationDate"]
            </th>
            <th>
                @Localizer["ExpirationDate"]
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            if (item.GetDayExpiration(item.ExpirationDate) == true)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.OwnerID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NumberOfRegistration)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RegistrationDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ExpirationDate)
                    </td>
                    <td>
                        <a href=@Url.Action( "Print", new { id = item.ContractID })>@Localizer["Print"]</a>
                        
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
