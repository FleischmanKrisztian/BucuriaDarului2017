@model Finalaplication.Models.Sponsor

@{
    ViewData["Title"] = "Delete";
}
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
<h1>@Localizer["Delete"]</h1>

<h3>@Localizer["Message1"]</h3>
<div>
    <h4>@Localizer["Sponsor"]</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Localizer["Nameofsponsor"]:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NameOfSponsor)
        </dd>
        <dt class="col-sm-2">
            @Localizer["Phonenumber"]:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ContactInformation.PhoneNumber)
        </dd>
        <dt class="col-sm-2">
            @Localizer["Emailaddrss"]:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ContactInformation.MailAdress)
        </dd>
        <dt class="col-sm-2">
            @Localizer["HasContract"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Contract.HasContract)
        </dd>
        <dt class="col-sm-2">
            @Localizer["Numberofregistration"]:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Contract.NumberOfRegistration)
        </dd>
        <dt class="col-sm-2">
            @Localizer["Registrationdate"]:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Contract.RegistrationDate)
        </dd>
        <dt class="col-sm-2">
            @Localizer["Expirationdate"]:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Contract.ExpirationDate)
        </dd>
        <dt class="col-sm-2">
            @Localizer["Date"]:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Sponsorship.Date)
        </dd>

        <dt class="col-sm-2">
            @Localizer["Moneyamount"]:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Sponsorship.MoneyAmount)
        </dd>
        <dt class="col-sm-2">
            @Localizer["WhatGoods"]?
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Sponsorship.WhatGoods)
        </dd>

    </dl>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

<div class="form-actions no-color">
    <input type="submit" value=@Localizer["Delete"] class="btn btn-primary" /> |
    <style>
        .button {
            background-color: dodgerblue;
            border: none;
            color: white;
            padding: 10px 28px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 14px;
            margin: 4px 2px;
            cursor: pointer;
        }

        .button1 {
            border-radius: 12%;
        }
    </style>
    <a href=@Url.Action( "Index" ) class="button button1">@Localizer["BackToList"]</a>
</div>
    }
</div>
