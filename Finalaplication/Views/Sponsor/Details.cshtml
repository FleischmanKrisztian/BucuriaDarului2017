@model Finalaplication.Models.Sponsor

@{
    ViewData["Title"] = "Details";
}
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
<h1>
    @Localizer["Details"]</h1>

<div>
    <h4>
        @Localizer["Sponsor"]</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Localizer["Nameofsponsor"]:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.NameOfSponsor)
            </dd>
            <dt class="col-sm-2">
                @Localizer["Phonenumber"]:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ContactInformation.PhoneNumber)
            </dd>
            <dt class="col-sm-2">
                @Localizer["Emailaddress"]:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ContactInformation.MailAdress)
            </dd>
            <dt class="col-sm-2">
                @Localizer["HasContract"]
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Contract.HasContract)
            </dd>
            <dt class="col-sm-2">
                @Localizer["Numberofregistration"]
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Contract.NumberOfRegistration)
            </dd>
            <dt class="col-sm-2">
                @Localizer["Registrationdate"]:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Contract.RegistrationDate)
            </dd>
            <dt class="col-sm-2">
                @Localizer["Expirationdate"]:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Contract.ExpirationDate)
            </dd>
            <dt class="col-sm-2">
                @Localizer["Date"]:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Sponsorship.Date)
            </dd>

            <dt class="col-sm-2">
                @Localizer["Moneyamount"]:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Sponsorship.MoneyAmount)
            </dd>
            <dt class="col-sm-2">
                @Localizer["Whatgoods"]:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Sponsorship.WhatGoods)
            </dd>
        </dl>
</div>
<div>
    <a href=@Url.Action( "Edit", new { id = Model.SponsorID })>@Localizer["Edit"]</a> |
    
    <a href=@Url.Action( "Index" )>@Localizer["BackToList"]</a>
</div>
