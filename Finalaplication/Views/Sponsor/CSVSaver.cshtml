@model IEnumerable<Finalaplication.Models.Sponsor>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@using Microsoft.AspNetCore.Builder
@using Microsoft.AspNetCore.Localization
@using Microsoft.Extensions.Options
@{
    ViewData["Title"] = "CSVSaver";
    string IDS = ViewBag.IDS;
}
<head>
    <style>
        text {
            color: white;
        }

        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        td, th {
            border: 1px solid #dddddd;
            text-align: center;
            padding: 8px;
        }

        td {
            text-align: center;
        }
    </style>
</head>

<h1>
    @Localizer["CSVSaver"]</h1>

<h3>
    @Localizer["Please choose what you want the Excel to contain"]:
</h3>
<br />

@using (Html.BeginForm("CSVSaver", "Sponsor/", FormMethod.Post))
{

    <div class="col-12">
        <h4>@Localizer["Check this for all fields"]: @Html.CheckBox("All", isChecked: true)</h4>
    </div>
    <br />
    <br />
    <div class="col-12">
        <h4>
            @Localizer["Select the properties"]:
        </h4>
        <br />
        <table>
            <tr>
                <th>@Localizer["NameOfSponsor"]</th>
                <th>@Localizer["Date"]</th>
                <th>@Localizer["MoneyAmount"]</th>
                <th>@Localizer["WhatGoods"]</th>
                <th>@Localizer["GoodsAmount"]</th>
                <th>@Localizer["HasContract"]</th>
                <th>@Localizer["ContractDetails"]</th>
                <th>@Localizer["PhoneNumber"]</th>
                <th>@Localizer["MailAdress"]</th>

            </tr>
            <tr>
                <td> @Html.CheckBox("NameOfSponsor")</td>
                <td> @Html.CheckBox("Date")</td>
                <td> @Html.CheckBox("MoneyAmount")</td>
                <td> @Html.CheckBox("WhatGoods")</td>
                <td> @Html.CheckBox("GoodsAmount")</td>
                <td> @Html.CheckBox("HasContract")</td>
                <td> @Html.CheckBox("ContractDetails")</td>
                <td> @Html.CheckBox("PhoneNumber")</td>
                <td> @Html.CheckBox("MailAdress")</td>

            </tr>
        </table>
    </div>

    @Html.Hidden("IDS", IDS)

    <div class="row align-items-center">
        <div class="col-3">
            <br />
            <button type="submit" class="btn btn-primary">
                <span class="glyphicon glyphicon-search" aria-hidden="true"></span> @Localizer["Export"]
            </button>
            <button type="button" style="background-color:lightcoral;border-color:lightcoral" class="btn btn-primary">
                @Html.ActionLink("Back", "Index")
            </button>
        </div>
    </div>
    <br />
}
<br />

