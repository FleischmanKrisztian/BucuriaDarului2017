@model IEnumerable<Finalaplication.Models.Sponsor>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewBag.Title = "Index";
}
<head>
    <style>

        .pagination a {
            color: black;
            float: left;
            padding: 8px 16px;
            text-decoration: none;
        }

            .pagination a.active {
                background-color: #4CAF50;
                color: white;
            }

            .pagination a:hover:not(.active) {
                background-color: #ddd;
            }
    </style>
</head>

<h1>@Localizer["Sponsors"]</h1>


<p>
    <a href=@Url.Action( "Create")>@Localizer["CreateNew"]</a>
</p>


@using (Html.BeginForm("Index", "Sponsor/", FormMethod.Get))
{
    @Html.TextBox("searching")<input type="submit" class="btn btn-primary" value=@Localizer["Search"] />
}

<br />

<div class="pagination">
    @{
        int x = 1;
        for (int i = 0; i < ViewBag.counter; i++)
        {
            if (i == 0 || i % ViewBag.nrofdocs == 0)
            {
                @Html.ActionLink(x.ToString(), "Index", new { page = x, sortOrder = ViewBag.SortOrder, searching = ViewBag.searching, HasContract = ViewBag.hascontract, HasCar = ViewBag.hascar, Active = ViewBag.active, lowerdate = ViewBag.Lowerdate, upperdate = ViewBag.Upperdate })
                x++;
            }
        }
    }
</div>
<br />
<table class="table">
    <thead>
        <tr>
            <th>
                @Localizer["Nameofsponsor"]
            </th>
            <th>
                @Localizer["Phonenumber"]
            </th>
            <th>
                @Localizer["Emailadress"]
            </th>
            <th>
                @Localizer["Hascontract"]
            </th>
            <th>
                @Localizer["Numberofregistration"]
            </th>
            <th>
                @Localizer["Registrationdate"]
            </th>
            <th>
                @Localizer["Expirationdate"]
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="3 " style="color:red">
                    @Localizer["Message"]
                </td>
            </tr>
        }
        else
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NameOfSponsor)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ContactInformation.PhoneNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ContactInformation.MailAdress)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Contract.HasContract)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Contract.NumberOfRegistration)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Contract.RegistrationDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Contract.ExpirationDate)
                    </td>
                    <td>
                        <a href=@Url.Action( "Edit", new { id = item.SponsorID })>@Localizer["Edit"]</a> |
                        <a href=@Url.Action( "Details", new { id = item.SponsorID })>@Localizer["Details"]</a> |
                        <a href=@Url.Action( "Delete", new { id = item.SponsorID })>@Localizer["Delete"]</a>
                    </td>
                </tr>
            }}
    </tbody>
</table>
