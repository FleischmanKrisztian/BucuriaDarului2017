@model IEnumerable<Finalaplication.Models.Event>
@{
    ViewBag.Title = "Events";
}
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
<head>
    <style>

        .pagination a {
            color: black;
            float: left;
            padding: 8px 16px;
            text-decoration: none;
        }

            .pagination a.active {
                background-color: #4CAF50;
                color: white;
            }

            .pagination a:hover:not(.active) {
                background-color: #ddd;
            }
    </style>
</head>


<h2>
    @Localizer["Events"]</h2>

<p>
    <a href=@Url.Action( "Create")>@Localizer["CreateNew"]</a>
</p>

@using (Html.BeginForm("Index", "Event/", FormMethod.Get))
{
    @Html.TextBox("searching")<input type="submit" value=@Localizer["Search"] />
}

<br />
<div class="pagination">
    @{
        int x = 1;
        for (int i = 0; i < ViewBag.counter; i++)
        {
            if (i == 0 || i % ViewBag.nrofdocs == 0)
            {
                @Html.ActionLink(x.ToString(), "Index", new { page = x, sortOrder = ViewBag.SortOrder, searching = ViewBag.searching, HasContract = ViewBag.hascontract, HasCar = ViewBag.hascar, Active = ViewBag.active, lowerdate = ViewBag.Lowerdate, upperdate = ViewBag.Upperdate })
                x++;
            }
        }
    }
</div>
<br />

<table class="table">
    <tr>
        <th>
            @Localizer["Nameofevent"]:
        </th>
        <th>
            @Localizer["Placeofevent"]:
        </th>
        <th>
            @Localizer["Dateofevent"]:
        </th>
        <th>
            @Localizer["Numberofvolunteersneeded"]:
        </th>
        <th>
            @Localizer["Currentlyallocated"]:
        </th>
        <th>
            @Localizer["Typeofactivities"]:
        </th>
        <th>
            @Localizer["Typeofevent"]:
        </th>
        <th>
            @Localizer["Duration"]:
        </th>
        <th></th>
    </tr>

    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="3 " style="color:red">
                @Localizer["IndexMessage"]
            </td>
        </tr>
    }
    else
    {
        foreach (var item in Model)
        {

            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NameOfEvent)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PlaceOfEvent)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateOfEvent)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumberOfVolunteersNeeded)
                </td>
                <td>
                    @Html.Raw(item.VolunteerAllocateCounter(item.AllocatedVolunteers, item.NumberOfVolunteersNeeded))
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TypeOfActivities)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TypeOfEvent)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Duration)
                </td>
                <td>
                    
                    <a href=@Url.Action( "Edit", new { id = item.EventID })>@Localizer["Edit"]</a> |
                    <a href=@Url.Action( "Details", new { id = item.EventID })>@Localizer["Details"]</a> |
                    <a href=@Url.Action( "Delete", new { id = item.EventID })>@Localizer["Delete"]</a> |
                    <a href=@Url.Action( "VolunteerAllocation", new { id = item.EventID })>@Localizer["AllocateVolunteers"]</a> |
                    <a href=@Url.Action( "SponsorAllocation", new { id = item.EventID })>@Localizer["AllocateSponsors"]</a>
                </td>
            </tr>
        }
    }
</table>
