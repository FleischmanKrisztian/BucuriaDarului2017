@model IEnumerable<Finalaplication.Models.Sponsor>
@{
    ViewBag.Title = "SponsorAllocation";
}
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    string evid = ViewBag.Evid.ToString();
    string strname = ViewBag.strname.ToString();
    string eventname = ViewBag.Eventname.ToString();

}
<h2>
    @Localizer["SponsorAllocationto"]: @eventname</h2>
@using (Html.BeginForm("/", "Event/SponsorAllocation/" + evid, FormMethod.Get))
{
   @Html.TextBox("searching")<input type="submit" value=@Localizer["Search"] class="btn btn-primary" />
    }
                             <br />
    <form action="/Event/SponsorAllocation" method="post">
        <table class="table">
            <tr>
                <th>
                    @Localizer["Nameofsponsor"]:
                </th>
                <th>
                    @Localizer["Phonenumber"]:
                </th>

                <th>
                    @Localizer["Allocationstatus"]:
                </th>
                <th></th>
            </tr>
            @if (Model.Count() == 0)
            {
                <tr>
                    <td colspan="3 " style="color:red">
                        @Localizer["IndexMessage"]
                    </td>
                </tr>
            }
            else
            {
                foreach (var item in Model)
                {

                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.NameOfSponsor)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ContactInformation.PhoneNumber)
                        </td>

                        @if (strname.Contains(item.NameOfSponsor))
                        {
                            <td>
                                <input type="checkbox" checked="checked" name="spons" value="@item.SponsorID" />
                            </td>
                            <td>
                                <input type="hidden" name="Evid" value="@ViewBag.Evid" />
                            </td>
                        }
                        else
                        {
                            <td>
                                <input type="checkbox" name="spons" value="@item.SponsorID" />
                            </td>
                            <td>
                                <input type="hidden" name="Evid" value="@ViewBag.Evid" />
                            </td>
                        }
                    </tr>
                }
            }
        </table>
        <input type="submit" name="submit" value=@Localizer["Allocate"] class="btn btn-primary" /><br />

    </form>
    <br />
    <div>
        <a href=@Url.Action( "Index" )>@Localizer["BackToList"]</a>
    </div>
