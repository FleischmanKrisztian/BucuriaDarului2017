@model Finalaplication.Models.Event

@{
    ViewBag.Title = "Delete";
}
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
<h2>@Localizer["Delete"]</h2>

<h3>
    @Localizer["DeleteMessage"]</h3>
<div>
    
        <dl class="dl-horizontal">
            <dt>
                @Localizer["Nameofevent"]:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.NameOfEvent)
            </dd>

            <dt>
                @Localizer["Placeofevent"]:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.PlaceOfEvent)
            </dd>

            <dt>
                @Localizer["Dateofevent"]:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DateOfEvent)
            </dd>

            <dt>
                @Localizer["Numberofvolunteersneeded"]:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.NumberOfVolunteersNeeded)
            </dd>

            <dt>
                @Localizer["Typeofactivities"]:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.TypeOfActivities)
            </dd>

            <dt>
                @Localizer["Typeofevent"]:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.TypeOfEvent)
            </dd>

            <dt>
                @Localizer["Duration"]:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Duration)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

<div class="form-actions no-color">
    <input type="submit" value=@Localizer["Delete"] class="btn btn-primary" /> |

    <style>
        .button {
            background-color: dodgerblue;
            border: none;
            color: white;
            padding: 10px 28px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 14px;
            margin: 4px 2px;
            cursor: pointer;
        }

        .button1 {
            border-radius: 12%;
        }
    </style>

    <a href=@Url.Action( "Index" ) class="button button1">@Localizer["BackToList"]</a>
</div>
        }
</div>
