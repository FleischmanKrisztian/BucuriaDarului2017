@model IEnumerable<Finalaplication.Models.Sponsor>
@{
    ViewBag.Title = "SponsorsAllocation";
}
@{
    string evid = ViewBag.Evid.ToString();
    string strname = ViewBag.strname.ToString();
    string eventname = ViewBag.Eventname.ToString();

}
<h2>SponsorAllocation to @eventname</h2>
@using (Html.BeginForm("/", "Event/SponsorsAllocation/" + evid, FormMethod.Get))
{
    @Html.TextBox("searching")<input type="submit" value="Search" />
}

<form action="/Event/SponsorsAllocation" method="post">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.NameOfSponsor)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Contact.PhoneNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Contact.MailAdress)
                </th>
                <th>
                    @Html.DisplayName("Allocation Status")
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() == 0)
            {
                <tr>
                    <td colspan="3 " style="color:red">
                        There is no Sponsor to Allocate with such name!
                    </td>
                </tr>
            }
            else
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.NameOfSponsor)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Contact.PhoneNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Contact.MailAdress)
                        </td>
                        @if (strname.Contains(item.NameOfSponsor))
                        {
                            <td>
                                <input type="checkbox" checked="checked" name="vols" value="@item.SponsorID" />
                            </td>
                            <td>
                                <input type="hidden" name="Evid" value="@ViewBag.Evid" />
                            </td>
                        }
                        else
                        {
                            <td>
                                <input type="checkbox" name="vols" value="@item.SponsorID" />
                            </td>
                            <td>
                                <input type="hidden" name="Evid" value="@ViewBag.Evid" />
                            </td>
                        }
                    </tr>
                }
            }
    </table>
    <input type="submit" name="submit" value="Allocate" /><br>
</form>