@model BucuriaDarului.Core.Sponsor
@{
    ViewData["Title"] = "Create";
}
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
<h1>@Localizer["Create"] @Localizer["Sponsor"]</h1>
<hr />
<head>
    <style>

        .emp-profile {
            padding-top: 1%;
            padding-left: 3%;
            padding-right: 3%;
            padding-bottom: 1%;
            margin-top: 3%;
            margin-bottom: 3%;
            border-radius: 0.5rem;
            background: #fff;
        }

        .profile-head h5 {
            color: #333;
        }

        .profile-head h6 {
            color: #0062cc;
        }

        .proile-rating {
            font-size: 15px;
            color: #818182;
            margin-top: 5%;
        }

        .emp-profile label {
            font-size: 18px;
            color: black;
            font-weight: 600;
        }

        .emp-profile img {
            padding-right: 2px;
            width: 45px;
            height: 35px;
        }
    </style>
</head>

<div>
    <h3 style="color: red">
        @ViewBag.message
    </h3>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container emp-profile">
        <div class="row">
            <div class="col-md-9">
                <div class="row">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="col-md-6"><label>@Localizer["NameOfSponsor"]:</label></div>
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.NameOfSponsor, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.NameOfSponsor, "", new { @class = "text-danger" })<hr />
                    </div>
                </div>
                <div class="row">
                    <div class=" col-md-6"><label>   @Localizer["PhoneNumber"]:</label></div>
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.ContactInformation.PhoneNumber, new { htmlAttributes = new { @data_val = "false", @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.ContactInformation.PhoneNumber, "", new { @class = "text-danger" })
                        <hr />
                    </div>
                </div>
                <div class="row">
                    <div class=" col-md-6">  <label>@Localizer["EmailAddress"]: </label></div>
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.ContactInformation.MailAddress, new { htmlAttributes = new { @data_val = "false", @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.ContactInformation.MailAddress, "", new { @class = "text-danger" })
                        <hr />
                    </div>
                </div>
                <div class="row">
                    <div class=" col-md-6"><label> @Localizer["HasContract"]: </label></div>
                    <div class="checkbox col-md-6">
                        <div style=" padding-left:20px; padding-bottom:2px !important">
                            @Html.EditorFor(model => model.Contract.HasContract)
                        </div>
                        @Html.ValidationMessageFor(model => model.Contract.HasContract, "", new { @class = "text-danger" })<hr />
                    </div>
                </div>
                <div class="row">
                    <div class=" col-md-6">  <label>  @Localizer["Numberofregistration"]:</label></div>
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.Contract.NumberOfRegistration, new { htmlAttributes = new { @data_val = "false", @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Contract.NumberOfRegistration, "", new { @class = "text-danger" })
                        <hr />
                    </div>
                </div>
                <div class="row">
                    <div class=" col-md-6"><label>@Localizer["Registrationdate"]: </label></div>
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.Contract.RegistrationDate, new { htmlAttributes = new { @data_val = "false", @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Contract.RegistrationDate, "", new { @class = "text-danger" })
                        <hr />
                    </div>
                </div>
                <div class="row">
                    <div class=" col-md-6"><label> @Localizer["ExpirationDate"]: </label></div>
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.Contract.ExpirationDate, new { htmlAttributes = new { @data_val = "false", @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Contract.ExpirationDate, "", new { @class = "text-danger" })
                        <hr />
                    </div>
                </div>
                <div class="row">
                    <div class=" col-md-6"> <label> @Localizer["Date"]:</label></div>
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.Sponsorship.Date, new { htmlAttributes = new { @data_val = "false", @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Sponsorship.Date, "", new { @class = "text-danger" })
                        <hr />
                    </div>
                </div>
                <div class="row">
                    <div class=" col-md-6"><label> @Localizer["Moneyamount"]: </label></div>
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.Sponsorship.MoneyAmount, new { htmlAttributes = new { @data_val = "false", @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Sponsorship.MoneyAmount, "", new { @class = "text-danger" })
                        <hr />
                    </div>
                </div>
                <div class="row">
                    <div class=" col-md-6"><label>@Localizer["Whatgoods"]: </label></div>
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.Sponsorship.WhatGoods, new { htmlAttributes = new { @data_val = "false", @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Sponsorship.WhatGoods, "", new { @class = "text-danger" })
                        <hr />
                    </div>
                </div>
                <div class="row">
                    <div class=" col-md-6"> <label>@Localizer["Goodsamount"]: </label></div>
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.Sponsorship.GoodsAmount, new { htmlAttributes = new { @data_val = "false", @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Sponsorship.GoodsAmount, "", new { @class = "text-danger" })
                        <hr />
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <input type="submit" value=@Localizer["Create"] class="btn btn-primary" /> |
                <button type="button" name="cancel" class="btn btn-primary" onclick=" history.go(-1)">@Localizer["BackToList"]</button>
            </div>
        </div>
    </div>

}