@model BucuriaDarului.Core.Sponsor
@{
    ViewData["Title"] = "Delete";
}
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
<h1>@Localizer["Sponsor"] @Localizer["Delete"] </h1>
<hr />
<head>
    <style>

        /*body {
                background-color: darkgray;
            }*/
        .emp-profile {
            padding-top: 1%;
            padding-left: 3%;
            padding-right: 3%;
            padding-bottom: 1%;
            margin-top: 3%;
            margin-bottom: 3%;
            border-radius: 0.5rem;
            background: #fff;
        }

        .profile-head h5 {
            color: #333;
        }

        .profile-head h6 {
            color: #0062cc;
        }

        .proile-rating {
            font-size: 15px;
            color: #818182;
            margin-top: 5%;
        }

        .emp-profile label {
            font-size: 18px;
            color: black;
            font-weight: 600;
        }

        .emp-profile img {
            padding-right: 2px;
            width: 45px;
            height: 35px;
        }
    </style>
</head>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container emp-profile">
        <div class="row">
            <div class="col-md-9">
                <div class="row">
                    <div class="col-md-6"><label>@Localizer["NameOfSponsor"]:</label></div>
                    <div class="col-md-6"> @Html.DisplayFor(model => model.NameOfSponsor)<hr /></div>
                </div>
                <div class="row">
                    <div class=" col-md-6"> <label>   @Localizer["PhoneNumber"]:</label></div>
                    <div class="col-md-6">  @Html.DisplayFor(model => model.ContactInformation.PhoneNumber)<hr /></div>
                </div>
                <div class="row">
                    <div class=" col-md-6"><label>@Localizer["EmailAddress"]: </label></div>
                    <div class="col-md-6">   @Html.DisplayFor(model => model.ContactInformation.MailAddress)<hr /></div>
                </div>
            </div>
            <div class="col-md-3">
                <input type="submit" value=@Localizer["Delete"] class="btn btn-primary" /> |
                <button type="button" name="cancel" class="btn btn-primary" onclick=" history.go(-1)">@Localizer["BackToList"]</button>
            </div>
        </div>
    </div>
}