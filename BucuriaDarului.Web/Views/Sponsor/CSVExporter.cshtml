                    <div class="col-md-4">
                        <label> @Localizer["MailAddress"]:</label>
                    </div>
                    <div class="col-md-2">
                        @Html.CheckBoxFor(model => model.MailAddress)
                        <hr />
                    </div>
                </div>
            </div>
        <div class="col-md-3">
            <input type="submit" value=@Localizer["Create"] class="btn btn-primary" /> |
            <a href=@Url.Action( "Index" ) class="btn btn-primary">@Localizer["BackToList"]</a>
        </div>
    </div>
    </div>
}