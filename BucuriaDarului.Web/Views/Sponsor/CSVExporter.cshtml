@model BucuriaDarului.Contexts.SponsorContexts.ExportParameters
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@using Microsoft.AspNetCore.Builder
@using Microsoft.AspNetCore.Localization
@using Microsoft.Extensions.Options
@{
    ViewData["Title"] = "CSVExporter";

}
<head>
    <style>

        text {
            color: white;
        }

        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        td, th {
            border: 1px solid #dddddd;
            text-align: center;
            padding: 8px;
        }

        td {
            text-align: center;
        }

        .scrollable-menu {
            height: auto;
            max-height: 200px;
            overflow-x: hidden;
        }

        .emp-profile {
            border-radius: 25px;
            padding: 5%;
            margin-bottom: 3%;
            border: 2px solid lightgray;
            background: #fff;
            /*background-color:lightgray*/
        }
    </style>
</head>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container emp-profile">
        <div>
            <h3 style="color:red">
                @ViewBag.message
            </h3>
        </div>
        <h3>
            @Localizer["Please choose what you want the Excel to contain"]:
        </h3>
        <br />
        <br />
        <div class="row">
            <div class="col-md-6">
                <div class="row">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="col-md-4">
                        <label> @Localizer["Check this for all fields"]:</label>
                    </div>
                    <div class="col-md-2">
                        @Html.CheckBoxFor(model => model.All, htmlAttributes: new { @checked = true })
                        <hr />
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="row">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="col-md-4">
                        <label>@Localizer["NameOfSponsor"]:</label>
                    </div>
                    <div class="col-md-2">
                        @Html.CheckBoxFor(model => model.NameOfSponsor)
                        <hr />
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="row">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="col-md-4">
                        <label> @Localizer["Date"]:</label>
                    </div>
                    <div class="col-md-2">
                        @Html.CheckBoxFor(model => model.Date)
                        <hr />
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="row">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="col-md-4">
                        <label> @Localizer["MoneyAmount"]:</label>
                    </div>
                    <div class="col-md-2">
                        @Html.CheckBoxFor(model => model.MoneyAmount)
                        <hr />
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="row">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="col-md-4">
                        <label>  @Localizer["WhatGoods"]:</label>
                    </div>
                    <div class="col-md-2">
                        @Html.CheckBoxFor(model => model.WhatGoods)
                        <hr />
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="row">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="col-md-4">
                        <label>@Localizer["GoodsAmount"]:</label>
                    </div>
                    <div class="col-md-2">
                        @Html.CheckBoxFor(model => model.GoodsAmount)
                        <hr />
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="row">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
