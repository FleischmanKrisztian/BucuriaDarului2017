@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = "ImportUpdate";
    var number = TempData.Peek("numberOfFiles");
    string duplicates = ViewBag.duplicates;
    string docsImported = ViewBag.documentsimported;
}
<head>
    <style>

        .emp-profile {
            border-radius: 25px;
            padding: 5%;
            margin-bottom: 3%;
            border: 2px solid lightgray;
            background: #fff;
        }
    </style>
</head>
<br />
<br />
<br />
<br />
<div class="emp-profile">
    <h1>Import Update</h1>
    <hr />
    <br />
    @if (Convert.ToInt64(docsImported) > 1)
    {
        <h3>You have successfully imported @docsImported  documents.</h3>
    }
    else if (Convert.ToInt64(docsImported) == 1)
    {
        <h3>You have successfully imported @docsImported  document.</h3>
    }
    else
    {
        <h2>No documents were imported.</h2>
    }
    @{
        string phrase = duplicates;
        if (!string.IsNullOrEmpty(phrase))
        {
            string[] words = phrase.Split(',');
            if (words.Any())
            {
                <h2>The following documents have been skipped:</h2>
                foreach (var a in words)
                {
                    <h4 style="text-align:center">@duplicates </h4>
                    <br />
                }
            }
        }
    }
    <br />
    <div>
        <button type="button" name="cancel" class="btn btn-primary" onclick=" history.go(-1)">@Localizer["BackToList"]</button>
    </div>
</div>