@model BucuriaDarului.Core.Volunteer
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewBag.Title = "Edit";
    string id = ViewBag.id;
}
<h2>@Localizer["Edit"] @Localizer["Volunteer"]</h2>
<head>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
    <script type="text/javascript">
        function ShowImagePreview(input) {
            if (input.files && input.files[0]) {
                var filerd = new FileReader();
                filerd.onload = function (e) {
                    $('#image-preview').attr('src', e.target.result);
                }
                filerd.readAsDataURL(input.files[0]);
            }
        }
    </script>
    <style>

        .emp-profile {
            padding: 3%;
            margin-top: 3%;
            margin-bottom: 3%;
            border-radius: 0.5rem;
            background: #fff;
        }

        h5 {
            color: #333;
        }

        h6 {
            color: #0062cc;
        }

        label {
            font-weight: 600;
            font-size: 15px;
        }
        }
    </style>
</head>
<div>
    <h3 style="color: red">
        @ViewBag.message
    </h3>
</div>

<form method="post" action="/Volunteer/Edit" enctype="multipart/form-data">
    @Html.HiddenFor(model => model.Id, new { Id = Model.Id })
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class=".emp-profile">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row">
            <div class="col-md-4">
                @{
                    if (Model.Image != null)
                    {
                        var imageBase64 = Convert.ToBase64String(Model.Image);
                        var imagesrc = string.Format("data:image/gif;base64,{0}", imageBase64);
                        <img src="@imagesrc" id="image-preview" alt="uploaded image preview" style="width:150px;height:200px" />
                    }
                    else
                    {
                        <br />
                        <div class="col-10">
                            <div>
                                <br />
                                <img id="image-preview" alt="uploaded image preview" style="width:150px;height:200px" /><br />
                                <span asp-validation-for="Image"></span>
                            </div>
                        </div>
                    }
                }
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="inputGroupFileAddon01">@Localizer["UploadImage"]</span>
                    </div>
                    <div class="custom-file">
                        <input type="file" class="custom-file-input" id="inputGroupFile01"
                               aria-describedby="inputGroupFileAddon01" asp-for="Image" onchange="ShowImagePreview(this)">
                        <label class="custom-file-label" for="inputGroupFile01"> @Localizer["Choose image"]</label><br />
                    </div>
                </div>
            </div>
            <div claas="col-md-8">
                <div class="row">
                    <div class="col-md-6">
                        @Localizer["Fullname"]:
                    </div>
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.Fullname, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Fullname, "", new { @class = "text-danger" })
                        <hr />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        @Localizer["Active"]:
                    </div>
                    <div class="col-md-6 checkbox">
                        <div style=" padding-left:20px; padding-bottom:2px !important">
                            @Html.EditorFor(model => model.InActivity)
                        </div>
                        @Html.ValidationMessageFor(model => model.InActivity, "", new { @class = "text-danger" })
                        <hr />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        @Localizer["Birthdate"]:
                    </div>
                    <div class="col-md-6">
                        <input class="form-control" type="date" name="Birthdate" value="2021-01-01" />
                        @Html.ValidationMessageFor(model => model.Birthdate, "", new { @class = "text-danger" })
                        <hr />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        @Localizer["Address"]:
                    </div>
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                        <hr />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        @Localizer["CNP"]:
                    </div>
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.CNP, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.CNP, "", new { @class = "text-danger" })
                        <hr />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        @Localizer["HasId"]
                    </div>
                    <div class="col-md-6">

                        @Html.EditorFor(model => model.CI.HasId)
                        @Html.ValidationMessageFor(model => model.CI.HasId, "", new { @class = "text-danger" })
                        <hr />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        @Localizer["IdInformation"]:
                    </div>
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.CI.Info, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.CI.Info, "", new { @class = "text-danger" })
                        <hr />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        @Localizer["IdExpirationDate"]:
                    </div>
                    <div class="col-md-6">
                        <input class="form-control" type="date" name="ExpirationDate" value="2021-01-01" />
                        @Html.ValidationMessageFor(model => model.CI.ExpirationDate, "", new { @class = "text-danger" })
                        <hr />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        @Localizer["PhoneNumber"]:
                    </div>
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.ContactInformation.PhoneNumber, new { htmlAttributes = new { @data_val = "false", @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.ContactInformation.PhoneNumber, "", new { @class = "text-danger" })
                        <hr />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        @Localizer["EmailAddress"]:
                    </div>
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.ContactInformation.MailAddress, new { htmlAttributes = new { @data_val = "false", @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.ContactInformation.MailAddress, "", new { @class = "text-danger" })
                        <hr />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        @Localizer["HasCar"]
                    </div>
                    <div class="col-md-6">

                        @Html.EditorFor(model => model.AdditionalInfo.HasCar)
                        @Html.ValidationMessageFor(model => model.AdditionalInfo.HasCar, "", new { @class = "text-danger" })
                        <hr />
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        @Localizer["HasDrivingLicense"]
                    </div>
                    <div class="col-md-6">

                        @Html.EditorFor(model => model.AdditionalInfo.HasDrivingLicense)
                        @Html.ValidationMessageFor(model => model.AdditionalInfo.HasDrivingLicense, "", new { @class = "text-danger" })
                        <hr />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        @Localizer["Remarks"]:
                    </div>
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.AdditionalInfo.Remark, new { htmlAttributes = new { @data_val = "false", @class = "form-control" } })
                        <hr />
                    </div>
                </div>
                @using (Html.BeginForm("CheckRadio", "Home", FormMethod.Post))
                {
                    <div class="row">
                        <div class="col-md-6">
                            @Localizer["Gender"]:
                        </div>
                        <div class="col-md-6">
                            @Localizer["Male"] @Html.RadioButtonFor(m => m.Gender, "Male")
                            @Localizer["Female"] @Html.RadioButtonFor(m => m.Gender, "Female")
                            <hr />
                        </div>
                    </div>
                }
                <div class="row">
                    <div class="col-md-6">
                        @Localizer["DesiredArea"]:
                    </div>
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.DesiredWorkplace, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.DesiredWorkplace, "", new { @class = "text-danger" })
                        <hr />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        @Localizer["FieldOfActivity"]:
                    </div>
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.FieldOfActivity, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.FieldOfActivity, "", new { @class = "text-danger" })
                        <hr />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        @Localizer["Occupation"]:
                    </div>
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.Occupation, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Occupation, "", new { @class = "text-danger" })
                        <hr />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        @Localizer["HourCount"]:
                    </div>
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.HourCount, new { htmlAttributes = new { @data_val = "false", @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.HourCount, "", new { @class = "text-danger" })
                        <hr />
                    </div>
                </div>
            </div>
        </div>
        <div class="row " style="float:right; padding-bottom:7%">
            <input type="submit" value=@Localizer["Save"] class="btn btn-primary" /> |
            <button type="button" name="cancel" class="btn btn-primary" onclick=" history.go(-1)">@Localizer["BackToList"]</button>
        </div>
    </div>
</form>