@model BucuriaDarului.Core.Volunteer
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewBag.Title = "Create";
}
<h2>@Localizer["Create"]  @Localizer["Volunteer"]</h2>
<head>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
    <script type="text/javascript">
        function ShowImagePreview(input) {
            if (input.files && input.files[0]) {
                var filerd = new FileReader();
                filerd.onload = function (e) {
                    $('#image-preview').attr('src', e.target.result);
                }
                filerd.readAsDataURL(input.files[0]);
            }
        }
    </script>
    <style>

        /*body {
                background-color: gainsboro;
            }*/

        .emp-profile {
            padding: 3%;
            margin-top: 3%;
            margin-bottom: 3%;
            border-radius: 0.5rem;
            background: #fff;
        }

        h5 {
            color: #333;
        }

        h6 {
            color: #0062cc;
        }

        label {
            font-weight: 600;
            font-size: 15px;
        }
    </style>
</head>
<div>
    <h3 style="color: red">
        @ViewBag.message
    </h3>
</div>

<form method="post" action="/Volunteer/Create" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class=" .emp-profile">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="row">
            <div class="col-md-4">
                <div>
                    <br />
                    <img id="image-preview" alt="uploaded image preview" style="width:150px;height:200px" /><br />
                    <span asp-validation-for="Image"></span>
                </div>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="inputGroupFileAddon01">@Localizer["UploadImage"]</span>
                    </div>
                    <div class="custom-file">
                        <input type="file" class="custom-file-input" id="inputGroupFile01"
                               aria-describedby="inputGroupFileAddon01" asp-for="Image" onchange="ShowImagePreview(this)" />
                        <label class="custom-file-label" for="inputGroupFile01"> @Localizer["ChooseImage"]</label><br />
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                <div class="row">
                    <div class="col-md-7">
                        @Localizer["Fullname"]:
                    </div>
                    <div class="col-md-5">
                        @Html.EditorFor(model => model.Fullname, new { htmlAttributes = new { @class = "form-control", maxlength = "100" } })
                        @Html.ValidationMessageFor(model => model.Fullname, "", new { @class = "text-danger" })
                        <hr />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-7">
                        @Localizer["Active"]
                    </div>
                    <div class="col-md-5">
                        <div style=" padding-left:20px; padding-bottom:2px !important">
                            @Html.EditorFor(model => model.InActivity)
                        </div>
                        @Html.ValidationMessageFor(model => model.InActivity, "", new { @class = "text-danger" })
                        <hr />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-7">
                        @Localizer["Birthdate"]:
                    </div>
                    <div class="col-md-5">
                        <input class="form-control" type="date" name="Birthdate" />
                        @Html.ValidationMessageFor(model => model.Birthdate, "", new { @class = "text-danger" })
                        <hr />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-7">
                        @Localizer["Address"]:
                    </div>
                    <div class="col-md-5">
                        @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control", maxlength = "60" } })
                        @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                        <hr />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-7">
                        @Localizer["CNP"]:
                    </div>
                    <div class="col-md-5">
                        @Html.EditorFor(model => model.CNP, new { htmlAttributes = new { @class = "form-control", maxlength = "15" } })
                        @Html.ValidationMessageFor(model => model.CNP, "", new { @class = "text-danger" })
                        <hr />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-7">
                        @Localizer["HasId"]
                    </div>
                    <div class="col-md-5">
                        <div style=" padding-left:20px; padding-bottom:2px !important">
                            @Html.EditorFor(model => model.CI.HasId)
                        </div>
                        @Html.ValidationMessageFor(model => model.CI.HasId, "", new { @class = "text-danger" })
                        <hr />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-7">
                        @Localizer["IdInformation"]:
                    </div>
                    <div class="col-md-5">
                        @Html.EditorFor(model => model.CI.Info, new { htmlAttributes = new { @class = "form-control", maxlength = "100" } })
                        @Html.ValidationMessageFor(model => model.CI.Info, "", new { @class = "text-danger" })
                        <hr />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-7">
                        @Localizer["IdExpirationDate"]:
                    </div>
                    <div class="col-md-5">
                        <input class="form-control" type="date" name="ExpirationDate" />
                        @Html.ValidationMessageFor(model => model.CI.ExpirationDate, "", new { @class = "text-danger" })
                        <hr />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-7">
                        @Localizer["PhoneNumber"]:
                    </div>
                    <div class="col-md-5">
                        @Html.EditorFor(model => model.ContactInformation.PhoneNumber, new { htmlAttributes = new { @data_val = "false", @class = "form-control", maxlength = "15" } })
                        @Html.ValidationMessageFor(model => model.ContactInformation.PhoneNumber, "", new { @class = "text-danger" })
                        <hr />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-7">
                        @Localizer["EmailAddress"]:
                    </div>
                    <div class="col-md-5">
                        @Html.EditorFor(model => model.ContactInformation.MailAddress, new { htmlAttributes = new { @data_val = "false", @class = "form-control", maxlength = "100" } })
                        @Html.ValidationMessageFor(model => model.ContactInformation.MailAddress, "", new { @class = "text-danger" })
                        <hr />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-7">
                        @Localizer["HasCar"]
                    </div>
                    <div class="col-md-5">
                        <div style=" padding-left:20px; padding-bottom:2px !important">
                            @Html.EditorFor(model => model.AdditionalInfo.HasCar)
                        </div>
                        @Html.ValidationMessageFor(model => model.AdditionalInfo.HasCar, "", new { @class = "text-danger" })
                        <hr />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-7">
                        @Localizer["HasDrivingLicense"]
                    </div>
                    <div class="col-md-5">
                        <div style=" padding-left:20px; padding-bottom:2px !important">
                            @Html.EditorFor(model => model.AdditionalInfo.HasDrivingLicense)
                        </div>
                        @Html.ValidationMessageFor(model => model.AdditionalInfo.HasDrivingLicense, "", new { @class = "text-danger" })
                        <hr />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-7">
                        @Localizer["Remarks"]:
                    </div>
                    <div class="col-md-5">
                        @Html.EditorFor(model => model.AdditionalInfo.Remark, new { htmlAttributes = new { @data_val = "false", @class = "form-control", maxlength = "200" } })
                        <hr />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-7">
                        @Localizer["Gender"]:
                    </div>
                    <div class="col-md-5">
                        @Localizer["Male"] @Html.RadioButtonFor(m => m.Gender, "Male")
                        @Localizer["Female"] @Html.RadioButtonFor(m => m.Gender, "Female")
                        <hr />
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-7">
                        @Localizer["DesiredArea"]:
                    </div>
                    <div class="col-md-5">
                        @Html.EditorFor(model => model.DesiredWorkplace, new { htmlAttributes = new { @class = "form-control", maxlength = "200" } })
                        @Html.ValidationMessageFor(model => model.DesiredWorkplace, "", new { @class = "text-danger" })
                        <hr />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-7">
                        @Localizer["FieldOfActivity"]:
                    </div>
                    <div class="col-md-5">
                        @Html.EditorFor(model => model.FieldOfActivity, new { htmlAttributes = new { @class = "form-control", maxlength = "200" } })
                        @Html.ValidationMessageFor(model => model.FieldOfActivity, "", new { @class = "text-danger" })
                        <hr />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-7">
                        @Localizer["Occupation"]:
                    </div>
                    <div class="col-md-5">
                        @Html.EditorFor(model => model.Occupation, new { htmlAttributes = new { @class = "form-control", maxlength = "200" } })
                        @Html.ValidationMessageFor(model => model.Occupation, "", new { @class = "text-danger" })
                        <hr />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-7">
                        @Localizer["HourCount"]:
                    </div>
                    <div class="col-md-5">
                        @Html.EditorFor(model => model.HourCount, new { htmlAttributes = new { @data_val = "false", @class = "form-control", maxlength = "8" } })
                        @Html.ValidationMessageFor(model => model.HourCount, "", new { @class = "text-danger" })
                        <hr />
                    </div>
                </div>
            </div>
        </div>
        <div class="row " style="float:right; padding-bottom:7%">
            <input type="submit" value=@Localizer["Create"] class="btn btn-primary" />|
            <a href="./Index/@ViewBag.query" class="btn btn-primary">@Localizer["BackToList"]</a>
        </div>
    </div>
</form>