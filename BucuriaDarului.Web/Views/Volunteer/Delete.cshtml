@model BucuriaDarului.Core.Volunteer
@{
    ViewBag.Title = "Delete";
}
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
<h2>@Localizer["Delete"]</h2>
<head>
    <style>

        /*body {
                background-color: gainsboro;
            }*/

        .emp-profile {
            padding: 3%;
            margin-top: 3%;
            margin-bottom: 3%;
            border-radius: 0.5rem;
            background: #fff;
        }

        h5 {
            color: #333;
        }

        h6 {
            color: #0062cc;
        }

        label {
            font-weight: 600;
            font-size: 15px;
        }
    </style>
</head>
<hr />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="emp-profile">
        <div class="row">
            <div class="col-md-9">
                <div class="row">
                    <div class="col-md-6">
                        <label>@Localizer["Fullname"]:</label>
                    </div>
                    <div class="col-md-6">
                        @Html.DisplayFor(model => model.Fullname)
                        <hr />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <label>@Localizer["Birthdate"]:</label>
                    </div>
                    <div class="col-md-6">
                        @if (Model.Birthdate != DateTime.MinValue)
                            @Model.Birthdate.ToShortDateString()
                        <hr />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <label>@Localizer["CNP"]:</label>
                    </div>
                    <div class="col-md-6">
                        @Html.DisplayFor(model => model.CNP)
                        <hr />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <label> @Localizer["Active"]:</label>
                    </div>
                    <div class="col-md-6">
                        @Html.DisplayFor(model => model.InActivity)
                        <hr />
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <span>
                    @using (Html.BeginForm(FormMethod.Post))
                    {
                        @if (Model.InActivity)
                        {
                            <input type="hidden" name="inactive" value=true>
                            <input type="submit" class="btn btn-primary" style="border-color: darkblue; background-color: dodgerblue" value=@Localizer["Inactivate"] />
                        }
                        else
                        {
                            <input type="submit" class="btn btn-primary" disabled="disabled" style="border-color: darkblue; background-color: dodgerblue" value=@Localizer["Inactivate"] />
                        }
                    }
                    @using (Html.BeginForm(FormMethod.Post, new { style = "width: 100px" }))
                    {
                        <input type="submit" class="btn btn-primary" style="border-color: darkred; background-color: red" value=@Localizer["Delete"] />
                    }
                </span>
                <button type="button" name="cancel" class="btn btn-primary" onclick=" history.go(-1)">@Localizer["BackToList"]</button>
            </div>
        </div>
    </div>
}