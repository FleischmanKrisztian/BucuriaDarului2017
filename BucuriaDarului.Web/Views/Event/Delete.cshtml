@model BucuriaDarului.Core.Event
@{
    ViewBag.Title = "Delete";
}
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
<h2>@Localizer["Delete"] @Localizer["Event"]</h2>
<h3>
    @Localizer["DeleteMessage"]
</h3>
<hr />
<head>
    <style>

        /*body {
                background-color: darkgray;
            }*/
        .emp-profile {
            padding-top: 1%;
            padding-left: 3%;
            padding-right: 3%;
            padding-bottom: 1%;
            margin-top: 3%;
            margin-bottom: 3%;
            border-radius: 0.5rem;
            background: #fff;
        }

        .profile-head h5 {
            color: #333;
        }

        .profile-head h6 {
            color: #0062cc;
        }

        .proile-rating {
            font-size: 15px;
            color: #818182;
            margin-top: 5%;
        }

        .emp-profile label {
            font-size: 18px;
            color: black;
            font-weight: 600;
        }

        .emp-profile img {
            padding-right: 2px;
            width: 45px;
            height: 35px;
        }
    </style>
</head>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="emp-profile">
        <div class="row">
            <div class="col-md-9">
                <div class="row">
                    <div class="col-md-6"><label>@Localizer["NameOfEvent"]:</label></div>
                    <div class="col-md-6"> @Html.DisplayFor(model => model.NameOfEvent)<hr /></div>
                </div>
                <div class="row">
                    <div class="col-md-6"><label>@Localizer["PlaceOfEvent"]:</label></div>
                    <div class="col-md-6">@Html.DisplayFor(model => model.PlaceOfEvent)<hr /></div>
                </div>
                <div class="row">
                    <div class="col-md-6"><label>@Localizer["DateOfEvent"]:</label></div>
                    <div class="col-md-6">
                        @if (Model.DateOfEvent != DateTime.MinValue)
                            @Model.DateOfEvent.ToShortDateString()<hr />
                        </div>
                </div>
            </div>

            <div class="col-md-3">
                <input type="submit" value=@Localizer["Delete"] class="btn btn-primary" /> |
                <a href="./Index/@ViewBag.query" class="btn btn-primary">@Localizer["BackToList"]</a>
            </div>
        </div>
    </div>
}