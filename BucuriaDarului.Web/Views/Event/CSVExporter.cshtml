                        <label> @Localizer["Nameofevent"]:</label>
                    </div>
                    <div class="col-md-2">
                        @Html.EditorFor(model => model.NameOfEvent)
                        <hr />
                    </div>

                </div>
            </div>

            <div class="col-md-9">
                <div class="row">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
