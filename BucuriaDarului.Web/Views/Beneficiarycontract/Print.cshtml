@model Finalaplication.Models.Beneficiarycontract
@{
    ViewData["Title"] = "Print";
}
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
<h1>@Localizer["Print"]</h1>
<hr />
<head>
    <style>

        /*body {
                background-color: darkgray;
            }*/
        .emp-profile {
            padding-top: 1%;
            padding-left: 3%;
            padding-right: 3%;
            padding-bottom: 1%;
            margin-top: 3%;
            margin-bottom: 3%;
            border-radius: 0.5rem;
            background: #fff;
        }

        .profile-head h5 {
            color: #333;
        }

        .profile-head h6 {
            color: #0062cc;
        }

        .proile-rating {
            font-size: 15px;
            color: #818182;
            margin-top: 5%;
        }

        .emp-profile label {
            font-size: 18px;
            color: black;
            font-weight: 600;
        }

        .emp-profile img {
            padding-right: 2px;
            width: 45px;
            height: 35px;
        }
    </style>
</head>
<div class="emp-profile">
    <div class="row">
        <div class="col-md-9">
            <div class="row">
                <div class="col-sm-6">
                    <label> @Localizer["Fullname"]:</label>
                </div>
                <div class="col-sm-6">
                    @Html.DisplayName(Model.Fullname)
                    <hr />
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <label>@Localizer["CNP"]:</label>
                </div>
                <div class="col-sm-6">
                    @Html.DisplayName(Model.CNP)
                    <hr />
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <label>@Localizer["Address"]:</label>
                </div>
                <div class="col-sm-6">
                    @Html.DisplayName(Model.Address)
                    <hr />
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <label> @Localizer["NumberOfPortions"]:</label>
                </div>
                <div class="col-sm-6">
                    @Html.DisplayName(Model.NumberOfPortion)
                    <hr />
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <label>@Localizer["IdApplication"]:</label>
                </div>
                <div class="col-sm-6">
                    @Html.DisplayName(Model.IdApplication)
                    <hr />
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <label> @Localizer["IdInvestigation"]:</label>
                </div>
                <div class="col-sm-6">
                    @Html.DisplayName(Model.IdInvestigation)
                    <hr />
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <label>@Localizer["Birthdate"]:</label>
                </div>
                <div class="col-sm-6">
                    @Html.DisplayName(Model.Birthdate.ToShortDateString())
                    <hr />
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <label> @Localizer["NumberOfRegistration"]:</label>
                </div>
                <div class="col-sm-6">
                    @Html.DisplayFor(model => model.NumberOfRegistration)
                    <hr />
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <label>@Localizer["RegistrationDate"]:</label>
                </div>
                <div class="col-sm-6">
                    @Html.DisplayFor(model => model.RegistrationDate)
                    <hr>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <label>@Localizer["ExpirationDate"]:</label>
                </div>
                <div class="col-sm-6">
                    @Html.DisplayFor(model => model.ExpirationDate)
                    <hr />
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <a href="ContractPrinter:@Model.Id"><img src="~/Resources/print.jpg" title=@Localizer["Print"]></a>|
            <a href=@Url.Action( "Index" ,new { idofbeneficiary = Model.OwnerID }) class="profile-edit-btn" name="btnAddMore">@Localizer["BackToList"]</a>
        </div>
    </div>
</div>